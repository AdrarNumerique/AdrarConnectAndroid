<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProcessusActivity">

    <View
        android:ID_InfoCollective="@+ID_InfoCollective/dividerProcessus"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/rougeProcess"
        android:backgroundTint="@color/rougeProcess" />

    <android.support.design.widget.TabLayout
        android:ID_InfoCollective="@+ID_InfoCollective/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:tabIndicatorColor="@color/rougeProcess"
        app:tabTextColor="@color/blancEcriture" />

    <android.support.v4.view.ViewPager
        android:ID_InfoCollective="@+ID_InfoCollective/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>